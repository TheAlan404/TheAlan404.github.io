{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "lib": ["ESNext", "DOM"],
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "paths": {
            "@/*": ["./*"]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
